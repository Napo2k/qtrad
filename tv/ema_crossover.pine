//@version=5
strategy("EMA Crossover Strategy", overlay=true)

// Input parameters
shortEmaLength = input.int(50, title="Short EMA Length", minval=1)
longEmaLength = input.int(200, title="Long EMA Length", minval=1)

// Calculate EMAs
shortEma = ta.ema(close, shortEmaLength)
longEma = ta.ema(close, longEmaLength)

// Plot EMAs
plot(shortEma, color=color.blue, title="Short EMA")
plot(longEma, color=color.red, title="Long EMA")

// Buy signal: Short EMA crosses above Long EMA
buySignal = ta.crossover(shortEma, longEma)

// Sell signal: Short EMA crosses below Long EMA
sellSignal = ta.crossunder(shortEma, longEma)

// Execute trades
if (buySignal)
    strategy.entry("Buy", strategy.long)

if (sellSignal)
    strategy.close("Buy")

